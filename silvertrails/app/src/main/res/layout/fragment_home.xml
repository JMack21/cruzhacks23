<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:backgroundTint="#000000"
    tools:context=".ui.home.HomeFragment">

    <com.pascalcase.silvertrails.gamertools.imagescrolling.TouchImageView
        android:id="@+id/campus_png_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/satellite_stevenson"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/satellite_stevenson"
        tools:srcCompat="@drawable/satellite_stevenson" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/map_markers_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/popup_frame"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00C66969"
        tools:context=".StudySpotPopupFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/popup_constrnt_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="376dp"
                android:layout_height="374dp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="83dp"
                android:src="@drawable/_021_05_31"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="378dp"
                android:layout_height="80dp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="418dp"
                android:gravity="center"
                android:text="Stevenson Coffee House is one of many cafes on campus that accepts SlugPoints, and also acts as a great study spot. It has tables for group study, or bar stools for individuals. Students can expect to find drinks, snacks, and meals available for purchase.  "
                android:textColor="#EDE9E9"
                android:textColorHighlight="#5E100E0E"
                android:textStyle="bold|italic"
                android:typeface="sans"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="95dp"
                android:layout_marginTop="507dp"
                android:text="Hours: Monday — Friday: 9am-5pm "
                android:textColor="#EDE7E7"
                android:textColorHighlight="#36333131"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>